<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout android:id="@+id/top_rect"
        android:layout_width="match_parent"
    	android:layout_height="50dp" >
    	
        <Button 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="20dp"
    		android:text="开机" />
        
        <Button 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="20dp"
    		android:text="静音" />
    </RelativeLayout>
    
    <LinearLayout android:id="@+id/second_rect"
        android:layout_width="match_parent"
    	android:layout_height="120dp"
    	android:layout_below="@id/top_rect"
    	android:orientation="vertical">
        
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="1" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="2" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="3" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="4" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="5" />
        </LinearLayout>
        
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="6" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="7" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="8" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="9" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="0" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="180dp"
    	android:layout_below="@id/second_rect"
    	android:orientation="vertical">
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="音量+" />
        </LinearLayout>
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="频道-" />
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="确定" />
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="频道+" />
        </LinearLayout>
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="音量-" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
